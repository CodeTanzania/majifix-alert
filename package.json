    "@commitlint/travis-cli": "^7.5.2",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "generate-changelog": "^1.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "husky": "^1.3.1",
    "chai": "^4.2.0",
    "grunt": "^1.0.4",
    "grunt-apidoc": "^0.11.0",
    "grunt-contrib-jshint": "^2.1.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-mocha-test": "^0.13.3",
    "jshint-stylish": "^2.2.1",
    "kue": "^0.11.6",
    "mocha": "^6.1.3",
    "mongoose": "5.5.1",
    "sinon": "^7.3.1",
