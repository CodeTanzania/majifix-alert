  "scripts": {
    "test": "grunt test",
    "integration": "grunt integration",
    "dev": "BASE_PATH=./examples node ./examples/app.js",
    "commit": "git-cz",
    "commit:all": "git add -A && git-cz",
    "changelog": "changelog"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeTanzania/majifix-alert.git"
  },
  "keywords": [
    "codetanzania",
    "majifix",
    "majifix-module",
